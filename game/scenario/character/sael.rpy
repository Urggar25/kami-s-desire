default sael_link = 0

label SAEL_LINK_INTERACT:

    menu:
        "Passer du temps avec Sael ?"
        "Oui":
            $ choice = True
        "Non":
            $ choice = False

    if not choice:
        if last_room_label:
            jump expression last_room_label
        return

    if sael_link == 0:
        jump sael_link_1
    elif sael_link == 1:
        jump sael_link_2
    elif sael_link == 2:
        jump sael_link_3
    elif sael_link == 3:
        jump sael_link_4
    elif sael_link == 4:
        jump sael_link_5

    if last_room_label:
        jump expression last_room_label
    return

label sael_link_1:

    play music "music/bgm_quiet_routine.mp3" fadein 1.0
    scene bg_sas at adaptive_fullscreen

    $ showP("sael", "reflechit", 0.70)
    $ showP("noam", "reflexion", 0.24)

    "Sael ajuste les lanières de ses gants avec une précision rituelle."
    noam "Tu fais ça à chaque fois que tu t'arrêtes."
    sael "À chaque transition."
    noam "Transition ?"
    sael "D'un lieu à l'autre. D'un état à l'autre."
    noam "C'est un rite ?"
    sael "Une discipline."
    noam "Chez toi, tout commence comme ça ?"
    sael "Chez moi, tout commence avant le jour."
    play sound sfx_tambour
    sael "Le tambour frappe trois fois."
    sael "Le premier coup dit : debout."
    sael "Le deuxième dit : respire."
    sael "Le troisième dit : endure."
    noam "Vous aviez quel âge quand ça commençait ?"
    sael "Six ans."
    noam "Six ans ?"
    sael "À six ans, on apprend à porter l'eau."
    sael "À sept, on apprend à porter les autres."
    sael "À huit, on apprend à se taire."
    noam "Pourquoi le silence est si important ?"
    $ showP("sael", "raison", 0.70)
    sael "Parce qu'un souffle mal placé coûte plus qu'un mot mal choisi."
    noam "Vous vous entraîniez au combat tous les jours ?"
    sael "Tous les jours."
    sael "Course en pente."
    sael "Port de charge."
    sael "Postures de garde."
    sael "Immobilité prolongée."
    noam "Immobilité ?"
    sael "Rester immobile pendant la pluie."
    sael "Rester immobile pendant la faim."
    sael "Rester immobile pendant la peur."
    noam "Ça semble cruel."
    sael "C'est nécessaire."
    noam "Personne ne protestait ?"
    sael "La protestation existe."
    sael "Mais elle se fait après l'effort, jamais avant."
    noam "Et si quelqu'un échouait ?"
    sael "On recommence."
    noam "Et si la personne échoue encore ?"
    sael "On l'entoure."
    noam "Je pensais que ta tribu rejetait les faibles."
    sael "Non."
    sael "On rejette l'abandon."
    sael "Pas la faiblesse."
    noam "Donc la force est collective ?"
    sael "Toujours."
    sael "Un corps seul est une réserve limitée."
    sael "Un groupe discipliné est une réserve qui se régénère."
    noam "Tu parles comme un manuel."
    sael "Parce que c'est gravé comme un manuel."
    noam "Vous aviez des lois écrites ?"
    sael "Sur pierre et sur peau."
    noam "Sur peau ?"
    sael "Scarifications de passage."
    noam "Tu en as ?"
    $ showP("sael", "reflechit", 0.70)
    sael "Oui."
    sael "Ici pour l'endurance."
    sael "Là pour la garde de nuit."
    sael "Et celle-ci pour la traversée sans eau."
    noam "Tu as traversé sans eau combien de temps ?"
    sael "Deux jours."
    noam "À quel âge ?"
    sael "Treize."
    sael "Notre enfance n'est pas douce."
    sael "Mais elle nous rend utiles."
    noam "Et les anciens ?"
    sael "Ils observent sans interrompre."
    noam "Jamais ?"
    sael "Seulement si la mort est certaine et inutile."
    noam "Inutile ?"
    sael "Toute mort doit enseigner, protéger, ou nourrir."
    noam "C'est brutal."
    sael "C'est limpide."
    noam "Tu regrettes cette vie ?"
    sael "Je regrette les visages."
    sael "Pas les règles."
    noam "Tu penses souvent à eux ?"
    sael "Chaque matin."
    sael "Quand je vérifie mes sangles."
    sael "Quand je compte mes respirations."
    sael "Quand je choisis de parler ou non."
    noam "C'est pour ça que tu réponds toujours lentement ?"
    sael "Oui."
    sael "Dans ma tribu, la vitesse de parole est une fuite."
    sael "La lenteur est un contrôle."
    noam "Et si quelqu'un parle trop ?"
    sael "On lui confie la veille solitaire."
    sael "Correction."
    noam "Tu me corriges, parfois ?"
    $ showP("sael", "determine", 0.70)
    sael "Oui."
    noam "Comment ?"
    sael "Je te laisse finir tes phrases inutiles."
    noam "Aïe."
    sael "Tu apprends."
    sael "Je suis droite."
    noam "Ça te pèse, de toujours tenir cette ligne ?"
    sael "Non."
    sael "La ligne me porte quand je vacille."
    noam "Et si la ligne te mène au mur ?"
    sael "Alors je frappe le mur jusqu'à ouvrir un passage."
    noam "Je comprends mieux ta tribu, maintenant."
    sael "Tu commences seulement à l'entendre."
    play sound sfx_tambour
    sael "Le reste se comprend quand le tambour remplace le cœur."

    $ sael_link = 1
    jump FREE_TIME_END

label sael_link_2:

    play music "music/bgm_cold_metadata.mp3" fadein 1.0
    scene bg_observation at adaptive_fullscreen

    $ showP("sael", "neutre", 0.70)
    $ showP("noam", "hesitation", 0.24)

    "La baie d'observation reflète les lumières froides de la station."
    noam "Tu dis souvent 'Kami' avec un ton... presque religieux."
    sael "Parce que le mot exact est religieux."
    noam "Donc tu crois vraiment à une divinité ?"
    sael "Je crois à une puissance qui dépasse notre marge d'action."
    noam "Ce n'est pas la même chose."
    sael "Pour survivre, si."
    noam "Explique-moi."
    sael "Une divinité, dans ma culture, n'est pas forcément juste."
    sael "Elle est ce qui définit les limites du possible."
    noam "Et Kami définit ces limites."
    sael "Exactement."
    noam "Mais Kami est faite de code, de réseaux, de structures humaines."
    sael "Et pourtant elle juge des masses, redistribue des vies, impose des lois."
    noam "Tu appelles ça de la foi ?"
